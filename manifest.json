{
  "manifest_version": 2,

  "name": "Cloak",
  "description": "This extension changes the font style in a specific page.",
  "version": "1.0",
  "icons": {
    "16": "green-cactus-clay-flower-pot-260nw-1103556998.jpg"
  },

  "page_action": {
    "default_icon": "green-cactus-clay-flower-pot-260nw-1103556998.jpg",
    "default_popup": "popup.html",
    "default_title": "Cloak"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://bitclout.com/*", "https://google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "permissions": [
    "tabs",
    "https://bitclout.com/*",
    "https://google.com/*",
    "storage"
  ]
}
